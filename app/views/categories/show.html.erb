<p style="color: green"><%= notice %></p>

<h1 class="text-center"><%= render @category %></h1>

<p class="text-center">
  <%= link_to "Edit this category", edit_category_path(@category), class:"btn btn-primary" %> |
  <%= link_to "Back to categories", categories_path, class:"btn btn-success" %>
  <div class="text-center">
  <%= button_to "Destroy this category", @category, method: :delete, class:"btn btn-outline-danger" %>
  </div>
</p>

<div class="text-center">
  <% @category.posts.each do |post| %>
  <%= link_to post.title, post_path(post) %>
  <% end %>
</div>
