<h1>Post Index</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Posted by</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th scope="col">Buttons</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= link_to post.user.username, user_path(post.user) %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to "Edit", edit_post_path(post), class:"btn btn-outline-primary" %></td>
      <td><%= link_to "Delete", post_path(post), data: { turbo_method: :delete }, class:"btn btn-outline-danger" %></td>
      <td><%= button_to "Destroy this post", post, method: :delete,class:"btn btn-outline-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
