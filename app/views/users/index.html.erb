<h1>User Index</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Created at</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= link_to "Delete", user_path(user), data: { turbo_method: :delete } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
